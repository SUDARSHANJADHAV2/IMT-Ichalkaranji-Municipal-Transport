# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/ibbps_dev

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration (e.g., for Mailtrap or your SMTP provider)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
FROM_EMAIL=noreply@ibbps.com
FROM_NAME="IBBPS Support"

# SMS OTP Service Configuration (e.g., Twilio - replace with your chosen provider)
# Note: Actual variable names might differ based on the chosen SMS service SDK
SMS_PROVIDER= # e.g., twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Fallback/Generic SMS API Key if not using Twilio directly in smsService.js
SMS_API_KEY=your_sms_provider_api_key
SMS_SENDER_ID=your_sms_provider_sender_id

# Cloud File Storage Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Default Admin User (Optional - for initial setup scripts if any)
ADMIN_EMAIL=admin@ibbps.com
DEFAULT_ADMIN_PASSWORD=adminSecurePassword123

# Frontend URL (For generating links in emails, QR codes, etc.)
FRONTEND_URL=http://localhost:8080
